<section class="tc">
  <h1>{{business.name}}</h1>
  <h2><a href="/map" class="f4 link dim br1 ph3 pv2 mb2 dib ba black shadow-3">{{text.address}} {{business.address}}</a></h2>
  <ul class="pa0">
    <h3>Accesibility Options Avaliable</h3>
    {{#each business.accessibility}}
    <li class="list">{{this}}</li>
    {{/each}}
  </ul>
  <p>{{text.desc}}{{business.desc}}</p>
  <p>{{text.opens}}{{business.opening}}</p>
  <h2>{{text.contact}}</h2>
  <p>{{text.phone}}{{business.phone}}</p>
  <p>{{text.email}}{{business.email}}</p>

  <section class="f1">
    <a href="https://www.facebook.com" class="fa fa-facebook link dim gray dib br-100 mr3" title='Link to Facebook Page'></a>
    <a href="https://www.instagram.com" class="fa fa-instagram link dim gray dib br-100 mr3" title='Link to Instagram Page'></a>
  </section>
</section>

{{> infoNavbar}}
